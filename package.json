{
  "name": "graphql-dataloader-boilerplate",
  "description": "GraphQL DataLoader boilerplate",
  "version": "0.0.1",
  "dependencies": {
    "bcrypt-as-promised": "^1.1.0",
    "dataloader": "^1.2.0",
    "dotenv-safe": "^2.3.2",
    "dotenv-save": "^1.2.0",
    "es6-promise": "^3.2.1",
    "graphql": "^0.7.0",
    "graphql-relay": "^0.4.3",
    "isomorphic-fetch": "^2.2.1",
    "jsonwebtoken": "^7.1.9",
    "koa": "^2.0.0",
    "koa-bodyparser": "^2.2.0",
    "koa-compose": "^3.1.0",
    "koa-convert": "^1.2.0",
    "koa-cors": "0.0.16",
    "koa-graphql": "^0.5.6",
    "koa-logger": "^2.0.0",
    "mongoose": "^4.6.2"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-eslint": "^6.1.2",
    "babel-plugin-transform-flow-strip-types": "^6.14.0",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.9.0",
    "eslint": "^3.5.0",
    "eslint-config-airbnb": "^10.0.1",
    "eslint-plugin-import": "^1.14.0",
    "flow-bin": "^0.32.0",
    "jest": "test",
    "jest-cli": "test",
    "nodemon": "^1.10.2",
    "reify": "^0.3.8",
    "repl": "^0.1.3",
    "repl-promised": "^0.1.0",
    "repl.history": "^0.1.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "./dist"
    ],
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "moduleNameMapper": {
      "^mongoose$": "<rootDir>/node_modules/mongoose"
    },
    "setupTestFrameworkScriptFile": "./test/mongooseConnection.js"
  },
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/sibelius/graphql-dataloader-boilerplate"
  },
  "scripts": {
    "build": "rm -rf dist/* && babel src --ignore *.spec.js --out-dir dist --copy-files",
    "eslint": "eslint index.js server/** test/**",
    "flow": "flow; test $? -eq 0 -o $? -eq 2",
    "repl": "nodemon --config ./repl/nodemon.json ./repl.js --exec babel-node",
    "start": "node dist/index.js",
    "test": "jest --coverage --forceExit",
    "test:watch": "jest --watch --coverage",
    "update-schema": "babel-node ./scripts/updateSchema.js",
    "watch": "nodemon src/index.js --exec babel-node"
  }
}
